<!-- views/contact.ejs -->
<div class="form-header">
<a href="/" class="red link btn">Back to Main Page</a>
</div>
<div class="form-header">
  <% if (Object.keys(errors).length === 0) { %>
    <h2>Select Search Options</h2>
  <% } else { %>
    <h2 class="errors-heading">Oops, please correct the following:</h2>
    <ul class="errors-list">
      <% Object.values(errors).forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>
</div>

<form method="post" action="/search" novalidate>
  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
  <div class="form-field <%= errors.searchTable ? 'form-field-invalid' : '' %>">
    <label>Table</label>
    <select name="searchTable">
      <% for (var table in tables) { let t = tables[table]; %>
      <option value="<%= t.title %>"<% if (t.selected) { %> selected<% } %>><%= t.title %></option>
      <% } %>
    </select>
  </div>
  <div class="form-field <%= errors.searchField ? 'form-field-invalid' : '' %>">
    <label>Search Field</label>
    <select name="searchField">
      <% for (var field in fields) { let f = fields[field]; %>
      <option value="<%= f.title %>"<% if (f.selected) { %> selected<% } %>><%= f.title %></option>
      <% } %>
    </select>
  </div>
  <!--
  <div class="form-field <%= errors.message ? 'form-field-invalid' : '' %>">
    <label for="message">Message</label>
    <textarea class="input" id="message" name="message" rows="4" autofocus><%= data.message %></textarea>
    <% if (errors.message) { %>
      <div class="error"><%= errors.message.msg %></div>
    <% } %>
  </div>
  <div class="form-field <%= errors.email ? 'form-field-invalid' : '' %>">
    <label for="email">Email</label>
    <input class="input" id="email" name="email" type="email" value="<%= data.email %>" />
    <% if (errors.email) { %>
      <div class="error"><%= errors.email.msg %></div>
    <% } %>
  </div>
  -->
  <div class="form-field <%= errors.query ? 'form-field-invalid' : '' %>">
    <label for="query">Search Query</label>
    <input class="input" id="query" name="query" value="<%= search.query %>" />
    <% if (errors.query) { %>
      <div class="error"><%= errors.query.msg %></div>
    <% } %>
  </div>
  <div class="form-actions">
    <button class="btn" type="submit">Search</button>
  </div>
</form>
<% if (search.query) { %>
<div class="">
<h4>Search result for query <font color="blue"><%= search.query %></font> of type <font color="blue"><%= search.field %></font> from table <font color="blue"><%= search.table %></font>:</h4>
<% if (items) { items.map((i) => { %>
<details><summary><%= Object.keys(i)[0] %>: <%= i[Object.keys(i)[0]] %></summary>
<ul>
<% Object.keys(i).map((k) => { %>
<li><b><%= k %></b>: <%= i[k] %></li>
<% }) %>
</ul>
</details>
<% })} %>
</div>
<% } %>
